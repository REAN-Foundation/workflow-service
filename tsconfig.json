{
    "compilerOptions": {
        "declaration": true,
        "incremental": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "nodenext",
        "esModuleInterop": true,
        "target": "ES2022",
        "listFiles":true,
        "noImplicitAny": false,
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "noEmitHelpers":false,
        "alwaysStrict": true,
        "suppressImplicitAnyIndexErrors": false,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule" : true,
        "outDir": "dist/",
        "diagnostics": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        // "typeRoots": ["@types", "node_modules/@types"]
    },
    "include": [
        "src/**/*",
        "docs/**/*",
    ],
    "exclude":[
        "node_modules"
    ],
}
